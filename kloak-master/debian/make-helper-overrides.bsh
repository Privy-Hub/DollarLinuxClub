version_numbers_by_upstream=true

make_install_hook_post() {
   if [ ! -d "$DESTDIR/usr/sbin" ]; then
      mkdir --parents "$DESTDIR/usr/sbin"
   fi
   cp eventcap "$DESTDIR/usr/sbin/"
   cp kloak "$DESTDIR/usr/sbin/"
}
